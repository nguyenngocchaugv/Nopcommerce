@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
<div class="product-grid venture-product-grid home-page-product-grid">
    <div class="title">
        <strong>@T("HomePage.Products")</strong>
    </div>
    <div class="item-grid">
        @if (Model.Count <= 4)
        {
            foreach (var item in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        }
        else
        {
            <div id="home-features-slider" class="home-features-slider">
                @foreach (var item in Model)
                {
                    <div class="item-box">
                        @await Html.PartialAsync("_ProductBox", item)
                    </div>
                }
            </div>
        }
    </div>
</div>
}