                        <div class="picture">
                            <a><img class="picture-img" src="@item.DefaultPictureModel.ImageUrl"/></a>
                        </div>
                    </div>
                    <div class="details">
                        <h2 class="product-title">
                            <a href="#"></a>
                        </h2>
                        <div class="add-info">
                            <div class="prices">
                                <div class="box-price-wrapper">
                                    <span class="price actual-price"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
